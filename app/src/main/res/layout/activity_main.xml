<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/christmas"
            tools:layout_editor_absoluteY="9dp"
            tools:layout_editor_absoluteX="133dp"
            android:id="@+id/imageView"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Friends, pssss... Merry Christmas!!!"
            android:textColor="@android:color/white"
            android:textSize="36sp"
            android:textAlignment="center"
            android:paddingTop="15dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:fontFamily="sans-serif-light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/title" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I wish you a lot of success in the new year, positive emotions and new achievements!"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textAlignment="center"
            android:paddingTop="15dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:fontFamily="sans-serif-light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_below="@id/title" />

    <TextView
            android:text="From your friend, Ioan."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:padding="10dp"
            android:textAlignment="center"
            android:fontFamily="sans-serif-light"
            android:layout_alignParentBottom="true"
            android:id="@+id/textView" />

</RelativeLayout>